    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "node",
            "runtimeVersion": "18.15.0",
            "request": "launch",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "runtimeArgs": [
                "run",
                "run:debug"
            ],
            "outFiles": [
                "!**/node_modules/**"
            ],
            "cwd": "${workspaceFolder}",
            "outputCapture": "std"
        }
    ]
}
